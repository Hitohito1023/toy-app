<h1>Book詳細画面（<%= @book.title %>）</h1>

<table class="table">
  <thead>
    <td>Title</td>
    <td>Body</td>
    <td>price</td>
    <td></td>
    <td></td>
  </thead>
  <tbody id="book_<%= @book.id %>">
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <td><%= @book.price %></td>
    <td class="like-btn"><%= render "likes/like-btn", book: @book %></td>
    <% if @book.user_id == current_user.id %>
      <td><%= link_to "編集", edit_book_path(@book), class:"btn btn-info" %></td>
    <% end %>
  </tbody>
</table>



