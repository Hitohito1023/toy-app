<% if book.liked_by?(current_user) %>
  <%= link_to book.likes.count, book_likes_path(book), method: :delete, remote: true, class: "glyphicon glyphicon-heart" %>
<% else %>
  <%= link_to book.likes.count, book_likes_path(book), method: :post, remote: true, class: "glyphicon glyphicon-heart-empty" %>
<% end %>