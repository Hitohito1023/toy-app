<h1><%= @user.name %>編集画面</h1>

<%= form_with model:@user, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.submit "保存" %>

<% end %>

<%= link_to "戻る", user_path(@user) %>
<%= link_to "削除", user_path(@user), method: :delete, data: { confirm: "You sure?" } %>